= form_for [:advocates, :admin, @advocate] do |f|
  - if @advocate.errors.any?
    %h2= "#{pluralize(@advocate.errors.count, t('.error'))} #{t('.prohibited_save')}"
    %ul
      - @advocate.errors.full_messages.each do |msg|
        %li= msg

  %fieldset
    = f.fields_for :user do |user_fields|
      = user_fields.label t(".email")
      = user_fields.email_field :email
      = user_fields.label t(".password")
      = user_fields.password_field :password
      = user_fields.label t(".password_confirmation")
      = user_fields.password_field :password_confirmation

      = user_fields.label t(".first_name")
      = user_fields.text_field :first_name
      = user_fields.label t(".last_name")
      = user_fields.text_field :last_name

      = f.label t(".account_number")
      = f.text_field :account_number
      = f.label t(".role")
      = f.collection_select :role, Advocate::ROLES, :to_s, :humanize, prompt: true
  = f.submit t(".submit"), class: "button"
