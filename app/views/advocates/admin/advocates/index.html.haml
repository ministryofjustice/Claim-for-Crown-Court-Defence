%h1.page-title
  Administration

.grid-row.clear-float
  %h2.heading-medium.left
    List of Advocates
  = link_to 'New Advocate', new_advocates_admin_advocate_path, class: 'button right'
  
%ul#assignee-list
  - @advocates.each do |advocate|
    %li
      = link_to "#{advocate.email} (#{advocate.role.humanize})", advocates_admin_advocate_path(advocate)
      %ul.actions
        %li
          = link_to t('.edit'), edit_advocates_admin_advocate_path(advocate)
        %li
          = link_to t('.delete'), advocates_admin_advocate_path(advocate), method: :delete, data: { confirm: t('.confirm_delete') }
