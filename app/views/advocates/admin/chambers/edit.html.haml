%h1.page-title Manage chamber

%h2 Edit chamber details

= form_for [:advocates, :admin, @chamber], html: { novalidate: true } do |f|

  - if @chamber.errors.any?
    .validation-summary
      %h2.heading-small= "#{t('.prohibited_save')} #{pluralize(@chamber.errors.count, t('.error'))}"
      %ul
        - @chamber.errors.full_messages.each do |message|
          %li
            = message
      %span.form-hint
        = t('.form_error_hint')
  %fieldset.user-form
    = f.label t('.chamber_name'), class: "form-label"
    = f.text_field :name
    = validation_error_message(@chamber, :name)

    = f.label t('.supplier_number'), class: "form-label"
    = f.text_field :supplier_number
    = validation_error_message(@chamber, :supplier_number)

    %label
      = f.check_box :vat_registered
      = t('.vat_registered')

    = f.label :api_key, t('.api_key'), class: "form-label"
    = @chamber.api_key

  %p
    = f.submit 'Save', class: "button"
