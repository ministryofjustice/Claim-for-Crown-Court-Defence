%div.container.financial_summary
  %div.grid-row
    %div.column-quarter
      %span.bold-medium
        = t('.total_outstanding')
      %div.bold-large
        = number_to_currency(financial_summary.total_outstanding_claim_value)
      %p
        = link_to t('.view_details'), outstanding_advocates_claims_path, id: "outstanding_claim_details"
    %div.column-quarter
      %span.bold-medium
        = t('.total_authorised')
      %div.bold-large
        = number_to_currency(financial_summary.total_authorised_claim_value)
      %p
        = "for this week"
        %br
        = link_to t('.view_details'), authorised_advocates_claims_path, id: "authorised_claim_details"

    %div.column-quarter
      &nbsp;
    %div.column-quarter
      = form_tag({controller: 'advocates/json_document_importer', action: 'create'}, method: 'post', multipart: true) do
        = label_tag nil, 'Upload file(s):', {class: "bold-normal", for:"json_file"}
        = file_field_tag :json_file
        = submit_tag 'Upload', class: "button button-secondary"
