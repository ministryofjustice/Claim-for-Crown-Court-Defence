.grid-row
  .column-three-quarter
    %h1.page-title
      - if current_user.persona.admin?
        = "All Claims"
      - else
        = "Your Claims"
  .columm-quarter
    = link_to t('link.add_claim'), new_advocates_claim_path, class: 'button button-get-started right'

#summary
  = render partial: 'financial_summary', locals: { financial_summary: @financial_summary }

#report-options.container
  = render partial: 'search_form'

#search-summary
  - if params[:search].present?
    = render partial: 'shared/search_summary'

= render partial: 'claims', locals: { claims: @claims }
