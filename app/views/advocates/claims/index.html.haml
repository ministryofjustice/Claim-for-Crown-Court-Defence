- if current_user.persona.admin?
  = render 'nav_tabs'

%header.page-title
  %h1
    Claims
  = link_to 'Add Claim', new_advocates_claim_path, class: 'button'

#summary
  = render partial: 'financial_summary', locals: { financial_summary: @financial_summary }

#search-options
  = render partial: 'search_form'

%section
  %h1
    - if params[:search].present?
      %p
      - if params[:search_field] == 'All'
        #{pluralize(@claims.count, 'claim')} matching search term "#{params[:search]}"
      - if params[:search_field] == 'Advocate'
        #{pluralize(@claims.count, 'claim')} matching advocate name "#{params[:search]}"
      - if params[:search_field] == 'Defendant'
        #{pluralize(@claims.count, 'claim')} matching defendant(s) "#{params[:search]}"

#claim-accordion
  %h2 Draft (#{@draft_claims.count})
  %section#draft
    = render partial: 'claims', locals: { claims: @draft_claims }

  %h2 Rejected (#{@rejected_claims.count})
  %section#rejected
    = render partial: 'claims', locals: { claims: @rejected_claims }

  %h2 Submitted to LAA (#{@submitted_claims.count})
  %section#submitted
    = render partial: 'claims', locals: { claims: @submitted_claims }

  %h2 Part paid (#{@part_paid_claims.count})
  %section#part_paid
    = render partial: 'claims', locals: { claims: @part_paid_claims }

  %h2 Completed (#{@completed_claims.count})
  %section#completed
    = render partial: 'claims', locals: { claims: @completed_claims }
