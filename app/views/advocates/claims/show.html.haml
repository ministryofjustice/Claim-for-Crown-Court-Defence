%p
  = link_to t('link.back'), advocates_claims_path, class: 'button'
  - if @claim.editable?
    = link_to t('link.edit'), edit_advocates_claim_path(@claim), class: 'button'

%h1
  = t('.heading')
  = @claim.case_number

%P
  = t('.created_by')
  = @claim.creator.name

#claim-accordion
  %h2
    = t(".h2_basic_info")
  = render partial: 'shared/claim', locals: { claim: @claim, hide_totals: true }
  %h2
    = t('.h2_summary')
  = render partial: 'shared/summary'
  %h2
    = t('.h2_evidence')
  = render partial: 'shared/evidence_list'
  %h2
    = t('.h2_messages')
    (#{@messages.count})
  = render partial: 'shared/messages'
  %h2
    = t('.h2_status')
  = render partial: 'shared/claim_status', locals: { disabled: true }
