<% if @case_type.requires_trial_dates? %>
  $('#trial-details').slideDown();
<% else %>
  $('#trial-details').hide();
<% end %>

<% if @case_type.requires_retrial_dates? %>
  $('#retrial-details').slideDown();
<% else %>
  $('#retrial-details').hide();
<% end %>

<% if @case_type.requires_defendant_dob? %>
  $('div.defendants').removeClass('hide-dob');
<% else %>
  $('div.defendants').addClass('hide-dob');
<% end %>


if (typeof ga != "undefined") {
  ga('set', 'dimension2', '<%= @case_type.name %>');

};