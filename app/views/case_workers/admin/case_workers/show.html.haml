= render partial: 'layouts/header', locals: {page_heading: 'Your account'}

.body-content
  .table-container.container
    %table
      %caption Your account
      %colgroup
        %col
        %col
      %tbody
        %tr
          %th{scope:'row'}
            = 'Roles:'
          %td
            = @case_worker.roles.map(&:humanize).join(', ')

- if can? :edit, @case_worker
  = link_to 'Edit', edit_case_workers_admin_case_worker_path(@case_worker), class: 'button button-secondary'

- if can? :change_password, @case_worker
  = link_to 'Change password', change_password_case_workers_admin_case_worker_path(@case_worker), class: 'button button-secondary'
