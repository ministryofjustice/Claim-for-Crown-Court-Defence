= form_for [:case_workers, :admin, @user], url: case_workers_admin_user_path do |f|
  - if @user.errors.any?
    %h2= "#{pluralize(@user.errors.count, 'error')} prohibited this claim from being saved:"
    %ul
      - @user.errors.full_messages.each do |msg|
        %li= msg

  = f.fields_for :user do |user_fields|
    = user_fields.label :email
    %br
    = user_fields.email_field :email
    %br
    = user_fields.label :password
    %br
    = user_fields.password_field :password
    %br
    = user_fields.label :password_confirmation
    %br
    = user_fields.password_field :password_confirmation
  %br
  = f.label :role
  %br
  = f.collection_select :role, CaseWorker::ROLES, :to_s, :humanize, prompt: true
  %br
  = f.submit
