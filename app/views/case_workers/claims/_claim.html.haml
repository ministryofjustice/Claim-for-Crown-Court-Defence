%ul.case-data
  %li
    %h3
      Case
    %dl
      %dt
        Case number
      %dd
        #{claim.case_number}
      %dt
        Case Type
      %dd
        #{claim.case_type.humanize}
      %dt
        Case submitted
      %dd
        #{claim.submitted_at.strftime('%d/%m/%Y %H:%M')}
      %dt
        Case Worker
      %dd
        #{claim.case_workers.map(&:email).join(', ')}
      %dt
        MATT no
      %dd
        #{claim.defendants.map(&:maat_reference).join(', ')}
      %dt
        Defendant name
      %dd
        #{claim.defendants.map(&:name).join(', ')}
      %dt
        Offence
      %dd

      %dt
        Offence class
      %dd
        #{claim.offence_class}
  %li
    %h3
      Court
    %dl
      %dt
        Court
      %dd
        #{claim.court.name}
      %dt
        Court type
      %dd
        #{claim.court.court_type.humanize}
      %dt
        Prosecuting authority
      %dd
        CPS
      %dt
        Hearing
      %dd
        15/04/2 7
      %dt
        Advocate
      %dd
        #{claim.advocate.email}
      %dt
        Advocate no
      %dd
        SUP125HYT**

  - unless controller.action_name == 'show'
    %li
      %h3
        Case Value
      %dl
        %dt
          Expenses
        %dd
          &pound;#{claim.expenses_total}
        %dt
          Fees
        %dd
          &pound;#{claim.fees_total}
        %dt
          VAT
        %dd
          TOTAL
        %dt
          %span.value
            &pound;#{claim.total}

- unless controller.action_name == 'show'
  .claim-controls
    = link_to 'Detail', case_workers_claim_path(claim), class: 'detail-link'
