%section
  %ul.case-data
    %li
      %h3
        Case
      %dl
        %dt
          Case number
        %dd
          #{claim.case_number}
        %dt
          Case Type
        %dd
          #{claim.case_type.humanize}

    %li
      %h3
        Court
      %dl
        %dt
          Court
        %dd
          #{claim.court.name}
        %dt
          Court type
        %dd
          #{claim.court.court_type.humanize}


    - unless controller.action_name == 'show'
      %li
        %h3
          Case Value
        %dl
          %dt
            Expenses
          %dd
            = number_to_currency(claim.expenses_total)
          %dt
            Fees
          %dd
            = number_to_currency(claim.fees_total)


  - unless controller.action_name == 'show'
    .claim-controls
      = link_to 'Detail', case_workers_claim_path(claim), class: 'detail-link'
