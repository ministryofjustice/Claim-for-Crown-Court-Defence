%nav.govuk-breadcrumbs{ 'aria-label': t('.sub_navigation') }
  %ul.govuk-breadcrumbs__list.breadcrumbs_seperator
    %li.govuk-breadcrumbs__list-item{ class: ('active' if @active_tab == 'status') }
      = link_to t('.claim_status'), case_workers_claim_path(@claim, tab: 'status')
    %li.govuk-breadcrumbs__list-item{ class: ('active' if @active_tab == 'information') }
      = link_to t('.claim_information'), case_workers_claim_path(@claim, tab: 'information')
