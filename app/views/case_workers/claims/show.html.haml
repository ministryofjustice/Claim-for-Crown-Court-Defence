- present(@claim) do |claim|

  %p
    - if @claim.errors.any?
      .validation-summary
        %h4.heading-small= "This claim has #{pluralize(@claim.errors.count, 'error')}"
        %ul
          - @claim.errors.full_messages.each do |msg|
            %li= msg
    - elsif params[:errors] # passed from redirect in update action
      .validation-summary
        %h4.heading-small= "This claim has #{pluralize(params[:errors].count, 'error')}"
        %ul
          - params[:errors].each do |msg|
            %li= msg

  = render 'shared/claim_header', claim: claim

  #claim-accordion{role: "tablist", multiselectable: "true"}
    - @message_expand = params[:messages].present? && params[:messages] == "true" ? true : false
    - @message_hide   = @message_expand ? false : true

    %h2{aria: {selected: "#{@message_expand}", controls: 'panel1', expanded: "#{@message_expand}"}, class: 'tab', id: 'tab1', role: 'tab', tabindex: "0"}
      = t('.h2_messages')
    .panel.accordion{aria: {hidden: "#{@message_hide}", labelledby: 'tab1', }, id: 'panel1', role: 'tabpanel'}
      = render partial: 'shared/claim_history', locales: {claim: claim }
      = render partial: 'shared/claim_status', locals: { claim: claim, disabled: false }


    %h2{aria: {selected: 'false', controls: 'panel2', expanded: 'false'}, class: 'tab', id: 'tab2', role: 'tab', tabindex: "-1"}
      = t(".h2_basic_info")
    .panel.accordion{aria: {hidden:'true', labelledby: 'tab2', }, id: 'panel2', role: 'tabpanel'}
      = render partial: 'shared/claim', locals: { claim: claim, hide_totals: true }


    %h2{aria: {selected: 'false', controls: 'panel3', expanded: 'false'},class: 'tab',  id: 'tab3', role: 'tab', tabindex: "-1"}
      = t('.h2_evidence')
    .panel.accordion{aria: {hidden:'true', labelledby: 'tab3', }, id: 'panel3', role: 'tabpanel'}
      = render partial: 'shared/evidence_list'


    %h2{aria: {selected: 'false', controls: 'panel4', expanded: 'false'},class: 'tab',  id: 'tab4', role: 'tab', tabindex: "-1"}
      = t('.h2_summary')
    .panel.accordion{aria: {hidden:'true', labelledby: 'tab1', }, id: 'panel4', role: 'tabpanel'}
      = render partial: 'shared/summary'
