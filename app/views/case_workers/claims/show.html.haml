-# CASE WORKER
= content_for :page_title, flush: true do
  = t('.page_title')

= content_for :v2_stylesheets do
  = stylesheet_link_tag "v2/application", media: "all"

- present(@claim) do |claim|
  = render 'errors/error_summary', ep: @claim, error_summary: t('.error_summary')
  = render 'errors/injection_error_summary', ep: claim
  = render 'warnings/conference_and_views_summary', claim: claim

  = render partial: 'shared/claim_summary_header', locals: { claim: claim }
  = render partial: 'shared/claim_summary_message', locals: { claim: claim }

  - if claim.certification.present?
    = render partial: 'shared/certification', locals: { claim: claim }

  - claim.summary_sections.each do |section, associated_step|
    - if claim.accessible_step?(associated_step)
      = render partial: "shared/summary/#{section}/summary", locals: { claim: claim, step: associated_step, section: section, editable: claim.editable_step?(associated_step) }

  -# = "REMOVE shared/claim_accordion"
  -# = render partial: 'shared/claim_accordion', locals: { claim: claim, status_disabled: false }
