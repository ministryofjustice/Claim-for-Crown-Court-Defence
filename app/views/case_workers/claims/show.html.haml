    Claim summary
  = render partial: 'payments'
  %h2
    Representation order
  = render partial: 'representation_order'
  %h2
    Evidence list
  = render partial: 'evidence_list'
  %h2
    Messages
  = render partial: 'advonote'
  %h2
    Claim notes
  = render partial: 'case_notes'
  %h2
    Update status of claim
  = render partial: 'claim_status'
