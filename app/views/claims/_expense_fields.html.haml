.nested-fields
  = f.label :expense_type
  = f.collection_select :expense_type_id, ExpenseType.all, :id, :name, prompt: true
  = f.label :location
  = f.text_field :location
  = f.label :quantity
  = f.number_field :quantity
  = f.label :rate
  = f.number_field :rate
  = f.label :hours
  = f.number_field :hours
  = f.label :amount
  = f.number_field :amount
  %p
    = link_to_remove_association 'Remove expense', f
