- if ep.injection_error
  .js-callout-injection-error
    .error-summary{ role: 'group', 'aria-labelledby': 'error-summary-heading', tabindex:'-1' }
      %h2.govuk-heading-m.error-summary-heading{id: 'error-summary-heading'}
        = ep.injection_error_summary

      %span.form-hint
        = ep.injection_error_hint

      %ul.error-summary-list
        - ep.injection_errors.each do |message|
          %li
            = link_to '#injection_error' do
              = message
      .hide-link
        = link_to ep.injection_error_dismiss_text, dismiss_injection_attempt_path(ep.last_injection_attempt), method: :patch, remote: true, class: 'cb-dismiss-link'
