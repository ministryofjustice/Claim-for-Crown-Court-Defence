%ul
  %li
    %h1
      = "AGFS Final Fees"
      = claim.fixed_fee_case?
    = "==================="

  - if claim.fixed_fee_case?
    %li.fx-seed-fixedFees{"data-seed": claim.raw_fixed_fees_total}
      = "Fixed fee"
      %span.total-fixedFees
        = claim.raw_fixed_fees_total
  - else
    %li.fx-seed-gradFees{"data-seed": claim.raw_basic_fees_total}
      = "Graduated fee"
      %span.total-gradFees
        = claim.raw_basic_fees_total

  %li.fx-seed-miscFees{"data-seed": claim.raw_misc_fees_total}
    = "Misc"
    %span.total-miscFees
      = claim.raw_misc_fees_total

  %li
    %br/
    %h1
      = "OTHER"
    = "==================="
  %li.fx-seed-disbursements{"data-seed": claim.raw_disbursements_total, "data-autovat": @claim.apply_vat? ? "true" : "false"}
    = "Disbursements"
    %span.total-disbursements
      = claim.raw_disbursements_total

  %li.fx-seed{"data-disbursement-vat": claim.raw_disbursements_vat}
    = "Disbursements VAT"
    = claim.raw_disbursements_vat

  %li.fx-seed-expenses{"data-seed": claim.raw_expenses_total}
    = "Expenses"
    %span.total-expenses
      = claim.raw_expenses_total

  %li.fx-seed{"data-expenses-vat": claim.raw_expenses_vat}
    = "Expenses VAT"
    = claim.raw_expenses_vat


  %li
    %br/
    %h1
      = "TOTALS"
    = "==================="
  %li.fx-seed{"data-vat-total": claim.raw_vat_amount}
    = "VAT"
    %span.total-vat
      = claim.raw_vat_amount

  %li.fx-seed{"data-total-excl": claim.raw_total_excl}
    = "Total excl"
    = claim.raw_total_excl

  %li.fx-seed{"data-total-inc": claim.raw_total_inc}
    = "Total incl"
    %span.total-grandTotal
      = claim.raw_total_inc
