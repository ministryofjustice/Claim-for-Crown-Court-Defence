- if !defined?(hide_remove)
  - hide_remove = false
  = "=>> #{hide_remove}"

.extra-data.nested-fields.fee-dates.fee-dates-from
  - if defined?(parent_model_prefix) && defined?(submodel_count)
    - error_prefix = "#{parent_model_prefix}_date_attended_#{submodel_count}"
  - else
    - error_prefix = "date_attended_0"

  = link_to_remove_association t(".remove"), f, {class: "date-action"}

  .fee-date-from.panel-margin-fix
    - if defined?(locale_scope)
      - locale_key = f.object.claim.case_type.name.split(' ').collect(&:capitalize).join.underscore

      - date_text = t(locale_key, scope: locale_scope)

    - else
      - date_text = t('.date_attended')

    = f.gov_uk_date_field :date, legend_text: date_text, legend_class: "form-label-bold", id: "#{error_prefix}_date", error_messages: gov_uk_date_field_error_messages(@error_presenter, "#{error_prefix}_date")
