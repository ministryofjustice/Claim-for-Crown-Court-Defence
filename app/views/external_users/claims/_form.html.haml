#claim-form
  - url = @claim.persisted? ? external_users_claim_path(@claim) : external_users_claims_path
  = form_for [:external_users, @claim], as: :claim, url: url, builder: AdpFormBuilder, html: { novalidate: true }, multipart: true, authenticity_token: true do |f|

    = f.hidden_field :form_id, value: @form_id || params[:claim][:form_id]

    = render partial: 'error_summary', locals: { ep: @error_presenter }

    = render partial: 'external_users/claims/case_details/form', locals: { f: f }

    = render partial: 'external_users/claims/defendants/form', locals: { f: f }

    = render partial: 'external_users/claims/basic_fees/form', locals: { f: f }

    = render partial: 'external_users/claims/misc_fees/form', locals: { f: f }

    = render partial: 'external_users/claims/fixed_fees/form', locals: { f: f }

    = render partial: 'external_users/claims/expenses/form', locals: { f: f }

    = render partial: 'external_users/claims/supporting_documents/form', locals: { f: f }

    = render partial: 'external_users/claims/supporting_evidence_checklist/form', locals: { f: f }

    = render partial: 'external_users/claims/additional_information/form', locals: { f: f }

    = render partial: 'external_users/claims/buttons/new', locals: { f: f }
