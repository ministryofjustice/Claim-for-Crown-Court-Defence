#claim-form
  = form_for @claim, as: :claim, builder: AdpFormBuilder, html: { novalidate: true, data: {claimId: @claim.id} }, multipart: true, authenticity_token: true do |f|

    = f.hidden_field :form_id, value: @form_id || params[:claim][:form_id]
    = f.hidden_field :form_step, value: @claim.form_step

    = render partial: "#{claim.current_step}_form_step", locals: { claim: claim, f: f }
    = render partial: 'external_users/claims/buttons/continue', locals: { claim: claim, f: f }
