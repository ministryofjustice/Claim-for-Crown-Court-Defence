.table-container.container
  %table.report
    %caption
      %span.table-caption
        = your_claims_header
      %span.claim-count
        - if @claims.none?
          = t("shared.no_claims_found")
        - else
          = "Showing "
          #{pluralize(@claims.unscope(:order).size, 'claim')} of #{@claims.total_count}
          - if params[:search].present?
            matching "#{params[:search]}"
    %thead

      - if user_requires_scheme_column?
        %th{scope:'col'}
          = t('.type')

      %th{scope:'col'}
        = sortable 'case_number', t(".case_number"), 'aria-label': t('.case_number_sort_label'), tabindex: 0

      - if current_user.persona.admin?
        %th{scope:'col'}
          = sortable 'advocate', t(".advocate_litigator"), 'aria-label': t('.advocate_sort_label'), tabindex: 0

      %th{scope:'col'}
        = t(".defendants")

      %th.numeric{scope:'col'}
        = sortable 'total_inc_vat', t(".total"), 'aria-label': t('.total_inc_vat_sort_label'), tabindex: 0

      %th.numeric{scope:'col'}
        = sortable 'amount_assessed', t(".assessed"), 'aria-label': t('.amount_assessed_sort_label'), tabindex: 0

      %th{scope:'col'}
        = sortable 'state', t(".status"), 'aria-label': t('.state_sort_label'), tabindex: 0

      %th.numeric{scope:'col'}
        = sortable 'last_submitted_at', t(".submission_date"), 'aria-label': t('.last_submitted_at_sort_label'), tabindex: 0

      %th{scope:'col'}
        = t(".messages")
    %tbody
      %tr.mobile-sort
        %th{colspan: 10}
          Sort by:
          = sortable 'case_number', t(".case_number"), 'aria-label': t('.case_number_sort_label'), tabindex: 0
          = sortable 'total_inc_vat', t(".total"), 'aria-label': t('.total_inc_vat_sort_label'), tabindex: 0
          = sortable 'amount_assessed', t(".assessed"), 'aria-label': t('.amount_assessed_sort_label'), tabindex: 0
          = sortable 'state', t(".status"), 'aria-label': t('.state_sort_label'), tabindex: 0
          = sortable 'last_submitted_at', t(".submission_date"), 'aria-label': t('.last_submitted_at_sort_label'), tabindex: 0
      - present_collection(claims).each do |claim|
        %tr{id: dom_id(claim), class: claim.state}

          - if user_requires_scheme_column?
            %td
              = claim.pretty_type

          %td
            = link_to claim.case_number,
                      external_users_claim_path_for_state(claim),
                      class: "js-test-case-number-link",
                      'aria-label': t('.case_number_label', claim_state: claim.state.humanize, case_number: claim.case_number)
            %div.unique-id-small
              = claim.unique_id
            %div.providers-ref
              = claim.providers_ref

          - if current_user.persona.admin?
            %td
              = claim.external_user.name

          %td
            = claim.defendant_names

          %td.numeric.claimed-amount
            = claim.total_inc_vat

          %td.numeric
            = claim.amount_assessed

          %td
            %span.state{class: 'state-' << claim.state.dasherize}
              = claim.state.humanize

          %td.numeric
            = claim.submitted_at.blank? ? "-" : claim.submitted_at

          %td.messages
            - if claim.messages.any?
              = link_to claim.has_unread_messages_for?(current_user) ? "View (#{claim.unread_messages_for(current_user).count} new)" : "View" , "#{external_users_claim_path(claim, messages: true)}#messages", 'aria-label': "View Messages for Case number #{claim.case_number}"
            - else
              %span.none= t(".none")
