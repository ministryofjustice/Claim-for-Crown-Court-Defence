= content_for :page_title, flush: true do
  = t('.page_title')

= content_for :v2_stylesheets do
  = stylesheet_link_tag "v2/application", media: "all"

= render partial: 'layouts/header', locals: {page_heading: t('.page_heading')}

%h2.heading-large
  %span.heading-secondary
    = "#{@claims.unscope(:order).size} of #{@claims.total_count}"
    = t('.with_total_assessed_value_of')
  %span.numerical-value
    = number_to_currency(@total_value)

#details#listanchor
  = render partial: 'main_claims_list', locals: { claims: @claims }
  = paginate @claims
