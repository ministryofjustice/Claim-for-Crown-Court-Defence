.grid-row
  .column-one-half.fee-type
    %label.form-label
      = f.object.description
    - if fee.fee_type.code == 'BAF'
      .form-hint
        = raw t('.basic_fee_prompt_text')
    - if fee.fee_type.code == 'SAF'
      .form-hint
        = raw t('.saf_prompt_text')

  .column-one-quarter.fee-quantity
    = f.adp_text_field :quantity,
                        label: t('.quantity'),
                        input_classes:'quantity',
                        input_type: 'number',
                        value: fee.quantity,
                        errors: @error_presenter

  .column-one-quarter.fee-rate
    = f.adp_text_field :rate,
                        label: t('.rate'),
                        input_classes:'rate',
                        input_type: 'currency',
                        errors: @error_presenter,
                        value: number_with_precision(f.object.rate, precision: 2)
.grid-row
  .column-one-third
    - if f.object.fee_type.case_uplift?
      = f.adp_text_field :case_numbers,
                        label: t('.case_numbers'),
                        input_classes:'js-basic-fee-case-numbers fx-fee-case-numbers',
                        hint_text:'Separate by commas',
                        errors: @error_presenter

  .column-one-third.fee-total
    - if f.object.fee_type.case_uplift?
      %br/
      %br/
    %label.form-label Total
    %span.total{data: {'total': fee.fee.amount ||= 0}}
      = number_to_currency(fee.fee.amount ||= 0)
