-# Check box input
.multiple-choice{"data-target" => to_slug(f.object.description)}
  %input{id: "#{to_slug(f.object.description)}_input","aria-controls" => to_slug(f.object.description), :name => "graduated_fees_checklist", :type => "checkbox" }/

  = f.check_box(:toggle, checked: !f.object.blank?)

  %label{:for => "daily-attendance-fee"}
    = f.object.description

-# Panel content
.panel.panel-border-narrow.js-hidden{:id => to_slug(f.object.description)}
  = f.hidden_field :fee_type_id, value: f.object.fee_type_id
  -# Number of days
  = f.adp_text_field :quantity,
                        label: t('.quantity'),
                        input_classes:'quantity',
                        input_type: 'number',
                        value: present(f.object).quantity,
                        errors: @error_presenter
  .form-group
    %label.form-label-bold{:for => "daily-attendance-fees-number-of-days"}
      Number of days
      %span.form-hint
        Include all days attended
    %input#daily-attendance-fees-number-of-days.form-control.form-control-1-8{:name => "daily_attendance_fees_number_of_days", :type => "text", :value => ""}/

  -# Dates attended
  .form-group
    %fieldset
      %legend.form-label-bold{:style => "width:100%;"}
        Date attended 1
        %span.form-hint
          For example, 31 3 2017
      .form-date
        .form-group.form-group-day
          %label.form-label{:for => "daily-attendance-fees-date-attended-1-day"}
            Day
          %input#daily-attendance-fees-date-attended-1-day.form-control{:max => "31", :min => "1", :name => "daily_attendance_fees_date_attended_1_day", :pattern => "[0-9]*", :type => "number", :value => ""}/
        .form-group.form-group-month
          %label.form-label{:for => "daily-attendance-fees-date-attended--month"}
            Month
          %input#daily-attendance-fees-date-attended-1-month.form-control{:max => "12", :min => "1", :name => "daily_attendance_fees_date_attended_1_month", :pattern => "[0-9]*", :type => "number", :value => ""}/
        .form-group.form-group-year
          %label.form-label{:for => "daily-attendance-fees-date-attended--year"}
            Year
          %input#daily-attendance-fees-date-attended-1-year.form-control{:max => "2019", :min => "1900", :name => "daily_attendance_fees_date_attended_1_year", :pattern => "[0-9]*", :type => "number", :value => ""}/

  -# Add dates link
  .form-group
    %a{:href => "#noop"}
      Add another date

  -# Net amount
  = f.adp_text_field :rate,
                        label: t('.rate'),
                        input_classes:'rate',
                        input_type: 'currency',
                        errors: @error_presenter,
                        value: number_with_precision(f.object.rate, precision: 2)
  .form-group
    %label.form-label-bold{:for => "daily-attendance-fees-net-amount"}
      Net amount
    %span.form-input-denote
      Â£
    %input#daily-attendance-fees-net-amount.form-control.form-control-1-4.form-input-denote__input{:max => "999999.99", :min => "0.00", :name => "daily_attendance_fees_net_amount", :step => "0.01", :type => "number", :value => ""}/



