.button-holder
  = f.submit t('buttons.submit_to_laa'), class: 'button left'
  - if @claim.draft?
    = f.submit t('buttons.save_to_drafts'), class: 'button button-secondary left'
  = link_to t('buttons.clear_form'), request.fullpath, class: 'button button-secondary right', data: { confirm: 'Are you sure you want to clear this form?' }
