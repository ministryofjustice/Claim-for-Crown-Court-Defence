- present(@claim) do |claim|
  .confirmation-header
    %h1.page-title.bold-large
      %img{:src => image_path('icons/tick-white.svg'), :alt => 'Success', :class => "confirmation-tick"}/
      = t('.thanks')

    .normal
      = t('.will_be_processed')

  .claim-confirmation
    %h2.heading-medium
      = t('.what_happens_next')

    %div.grid-row
      = raw t('.what_happens_next_prompt1')

    - if claim.disk_evidence?
      %h2.heading-small
        Please send evidence to the following address:
      = render partial: 'external_users/claims/supporting_documents/laa_address', locals: { f: claim }

    %div.grid-row
      = raw t('.what_happens_next_prompt2')


    .button-holder
      = link_to t('link.file_another_claim'), types_external_users_claims_path, {class: 'button btn-spacer-20', role: 'button'}
      = link_to t('link.view_claim'), external_users_root_url, {class: 'button-gray-3', role: 'button'}
