= content_for :page_title, flush: true do
  = t('.page_title')

- present(@claim) do |claim|
  .govuk-panel.govuk-panel--confirmation
    %h1.govuk-panel__title
      = t('.thanks')

    .govuk-panel__body
      = t('.will_be_processed')

  .claim-confirmation
    %h2.heading-medium
      = t('.what_happens_next')

    .grid-row
      = raw t('.what_happens_next_prompt_html', external_users_root_url: external_users_root_url)

      - if claim.disk_evidence?
        = render partial: 'shared/disk_evidence_info', locals: { f: claim }

    .button-holder
      = link_to t('link.file_another_claim'), types_external_users_claims_path, { class: 'button btn-spacer-20', role: 'button' }
      = link_to t('link.view_claim'), external_users_root_url, { class: 'button-gray-3', role: 'button' }
