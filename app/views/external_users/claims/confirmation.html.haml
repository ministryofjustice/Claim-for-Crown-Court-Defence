- present(@claim) do |claim|
  .confirmation-header
    %h1.page-title.bold-large
      %object{:type => 'image/svg+xml', :data => image_path('icons/tick-white.svg'), :class => "confirmation-tick"}
      = t('.thanks')

    .normal
      = t('.will_be_processed')

  .confirmation-section
    %h2
      = t('external_users.claims.show.h2_basic_info')
    = render partial: 'shared/claim', locals: { claim: claim, hide_totals: true }

    %h2
      = t('external_users.claims.show.h2_summary')
    = render partial: 'shared/summary'

  .button-holder
    = link_to t('link.view_claim'), external_users_root_url, class: 'button button-secondary'

    = link_to t('link.file_another_claim'), types_external_users_claims_path, class: 'button'
