.mod-fees.fx-numberedList-wrapper{id: @claim.form_step}
  = f.anchored_without_label 'interim_fee.disbursements'

  .disbursements-group-wrapper
    = f.fields_for :disbursements do |disbursement_fields|
      - @disbursement_count += 1
      = render 'external_users/claims/disbursements/disbursement_fields', f: disbursement_fields

  = link_to_add_association t('.add_disbursement'), f, :disbursements, partial: 'external_users/claims/disbursements/disbursement_fields', class: 'button button-secondary blue add_fields', data: {'association-insertion-method' => 'append', 'association-insertion-traversal' => 'prev', 'association-insertion-node' => 'div'}
