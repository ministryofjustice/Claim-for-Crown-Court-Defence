.form{:autocomplete => "off", :method => "post"}
  .form-section-compound{"data-item-number" => "1"}
    %input#origin_postcode{:autocapitalize => "off", :autocorrect => "off", :name => "origin", :spellcheck => "false", :type => "hidden", :value => "B4 6QB"}/
    %h3.heading-medium
      Expense 1
      %a.link-remove{:href => "#noop"}
        Remove
        %span.visually-hidden  this expense
    .grid-row
      .column-half
        -# SELECT: Expense types
        = render 'external_users/claims/expenses/select_expense_types'

      .column-half
        -# SELECT: Travel reasons
        = render 'external_users/claims/expenses/select_travel_reasons'

        -# INPUT: Other reasons
        .form-group.fx-travel-reason-other
          %label.form-label-bold{:for => "travel-expense-1-travel-reason-other"}
            Other reason
            / <span class="form-hint">Something</span>
          %input#travel-expense-1-travel-reason-other.form-control.form-control-3-4{:autocapitalize => "off", :autocomplete => "off", :autocorrect => "off", :name => "travel_expense_1_travel_reason_other", :spellcheck => "false", :type => "text", :value => ""}/


    .grid-row
      .column-half

        .form-group.fx-toggle-select{:style => "display: block;"}
          %fieldset
            %legend.form-label-bold
              Dynamic select

            %select#mySelect.form-control.form-control-3-4{:name => "my-name"}

        .form-group.fx-toggle-input{:style => "display: block;"}
          %label.form-label-bold{:for => "travel-expense-1-destination"}
            Dynamic Input
            / <span class="form-hint">Something</span>
          %input#travel-expense-1-destination.form-control.form-control-3-4{:autocapitalize => "off", :autocomplete => "off", :autocorrect => "off", :name => "travel_expense_1_destination", :spellcheck => "false", :type => "text", :value => ""}/


        -# INPUT: Destination
        .form-group.fx-travel-destination
          %label.form-label-bold{:for => "travel-expense-1-destination"}
            Destination
            / <span class="form-hint">Something</span>
          %input#travel-expense-1-destination.form-control.form-control-3-4{:autocapitalize => "off", :autocomplete => "off", :autocorrect => "off", :name => "travel_expense_1_destination", :spellcheck => "false", :type => "text", :value => ""}/


        -# SELECT: Crown courts
        = render 'external_users/claims/expenses/select_crown_courts'

        -# SELECT: Prisons
        = render 'external_users/claims/expenses/select_prisons'

        -# SELECT: Secure hospitals
        = render 'external_users/claims/expenses/select_secure_hospitals'

        -# INPUT: Location
        .form-group.fx-travel-location
          %label.form-label-bold{:for => "travel-expense-1-location"}
            Location
            / <span class="form-hint">Something</span>
          %input#travel-expense-1-location.form-control.form-control-3-4{:autocapitalize => "off", :autocomplete => "off", :autocorrect => "off", :name => "travel_expense_1_location", :spellcheck => "false", :type => "text", :value => ""}/

      .column-half
        -# INPUT: Travel hours
        .form-group.fx-travel-hours
          %label.form-label-bold{:for => "travel-expense-1-hours"}
            Hours
          %input#travel-expense-1-hours.form-control.form-control-1-8{:autocapitalize => "off", :autocorrect => "off", :max => "999.00", :min => "0.00", :name => "travel_expense_1_hours", :spellcheck => "false", :step => "0.25", :type => "number", :value => ""}/

        -# INPUT: Travel Distance
        .form-group-compound.fx-travel-distance
          %label.form-label-bold{:for => "travel-expense-1-distance"}
            Distance
            %span.form-hint Total distance for the return journey
          %input#travel-expense-1-distance.form-control.form-control-1-4{:autocapitalize => "off", :autocorrect => "off", :max => "9999.00", :min => "0.00", :name => "travel_expense_1_distance", :spellcheck => "false", :step => "0.01", :type => "number", :value => ""}/

        -# DETAILS: Distance calculation
        .form-group.fx-travel-distance
          %details{:role => "group"}
            %summary{"aria-controls" => "details-content-0", "aria-expanded" => "false", :role => "button"}
              %span.summary How we calculate the distance
            #details-content-0.panel.panel-border-narrow{"aria-hidden" => "true"}
              %p
                We use the postcode associated with your supplier number to automatically calculate the distance between your address and the destination, eg court or prison.

    .grid-row
      .column-half
        -# RADIOS: Cost per mile
        .form-group.fx-travel-cost
          %fieldset
            %legend.form-label-bold{:for => "travel-expense-1-cost-per-mile-1"}
              Cost per mile
            .multiple-choice
              %input#travel-expense-1-cost-per-mile-1.travel-expense-1-cost-per-mile{:autocapitalize => "off", :autocorrect => "off", :name => "travel_expense_1_cost_per_mile", :spellcheck => "false", :type => "radio", :value => "0.25"}/
              %label{:for => "travel-expense-1-cost-per-mile-1"}
                %abbr{:title => "25 pence"} 25p
                per mile
            .multiple-choice
              %input#travel-expense-1-cost-per-mile-2.travel-expense-1-cost-per-mile{:autocapitalize => "off", :autocorrect => "off", :name => "travel_expense_1_cost_per_mile", :spellcheck => "false", :type => "radio", :value => "0.45"}/
              %label{:for => "travel-expense-1-cost-per-mile-2"}
                %abbr{:title => "25 pence"} 45p
                per mile


    .grid-row
      .column-half
        -# DATES: Expense date
        .form-group.fx-travel-date
          %fieldset
            %legend.form-label-bold
              Date of expense
              %span.form-hint
                For example, 31 3 2017
            .form-date
              .form-group.form-group-day
                %label.form-label{:for => "travel-expense-date-1-day"}
                  Day
                %input#travel-expense-date-1-day.form-control{:autocapitalize => "off", :autocorrect => "off", :max => "31", :min => "1", :name => "travel_expense_date_1_day", :pattern => "[0-9]*", :spellcheck => "false", :type => "number", :value => ""}/
              .form-group.form-group-month
                %label.form-label{:for => "travel-expense-date-1-month"}
                  Month
                %input#travel-expense-date-1-month.form-control{:autocapitalize => "off", :autocorrect => "off", :max => "12", :min => "1", :name => "travel_expense_date_1_month", :pattern => "[0-9]*", :spellcheck => "false", :type => "number", :value => ""}/
              .form-group.form-group-year
                %label.form-label{:for => "travel-expense-date-1-year"}
                  Year
                %input#travel-expense-date-1-year.form-control{:autocapitalize => "off", :autocorrect => "off", :max => "2019", :min => "1900", :name => "travel_expense_date_1_year", :pattern => "[0-9]*", :spellcheck => "false", :type => "number", :value => ""}/

    .grid-row
      .column-half
        -# INPUT: Net amount
        .form-group.fx-travel-net-amount
          %label.form-label-bold{:for => "travel-expense-1-net-amount"}
            Net amount
          %span.form-input-denote
            £
          %input#travel-expense-1-net-amount.form-control.form-input-denote__input{:autocapitalize => "off", :autocorrect => "off", :max => "999999.99", :min => "0.00", :name => "travel_expense_1_net_amount", :spellcheck => "false", :step => "0.01", :type => "number", :value => ""}/

      .column-half
        -# INPUT: VAT amount
        .form-group.fx-travel-vat-amount
          %label.form-label-bold{:for => "travel-expense-1-vat-amount"}
            %abbr{:title => "Value Added Tax"} VAT
            amount
          %span.form-input-denote
            £
          %input#travel-expense-1-vat-amount.form-control.form-input-denote__input{:autocapitalize => "off", :autocorrect => "off", :max => "999999.99", :min => "0.00", :name => "travel_expense_1_vat_amount", :spellcheck => "false", :step => "0.01", :type => "number", :value => ""}/

      .column-half
        -# INPUT: Expense total
        .form-group.fx-travel-gross-amount
          %label.form-label-bold{:for => "travel-expense-1-gross-amount"}
            Total amount
          %span.form-input-denote
            £
          %input#travel-expense-1-gross-amount.form-control.form-input-denote__input{:autocapitalize => "off", :autocorrect => "off", :max => "999999.99", :min => "0.00", :name => "travel_expense_1_gross_amount", :spellcheck => "false", :step => "0.01", :type => "number", :value => ""}/

    .grid-row
      .column-full
        -# TEXTAREA: Additional information
        .form-group.fx-additional-info
          %label.form-label-bold{:for => "travel-expense-1-additional-information"}
            Additional information (optional)
            %span.form-hint Provide supporting evidence for this expense
          %textarea#travel-expense-1-additional-information.form-control.form-control-full-textarea{:name => "travel_expense_1_additional_information", :rows => "2"}


%hr/

#expenses.mod-expenses.fx-numberedList-wrapper
  = render partial: 'external_users/claims/expenses/expense_reasons', :formats => [:js]

  .js-cocoon-expenses
    %h2.bold-medium
      = t('.expenses')

    %p.form-hint
      = t('.expenses_prompt_text')

    = f.fields_for :expenses do |expense|
      = render 'external_users/claims/expenses/expense_fields', f: expense

  = link_to_add_association t('.add_another_expense'), f, :expenses, partial: 'external_users/claims/expenses/expense_fields', class:'button button-secondary', data: {'association-insertion-method' => 'append', 'association-insertion-traversal' => 'prev', 'association-insertion-node' => 'div'}

  %a.fx-duplicate-expense{:href => ""}
    = "Duplicate last expense"
