- if @claim.allows_fixed_fees?

  #fixed-fees.mod-fees
    %h2.heading-large
      = t('.fixed_fees')
    .small
      = t(:fee_excl_vat_hint, scope: [:dictionary])
    %br/

    = render 'external_users/claims/case_type_disabled', f: f
    
    .fixed-fee-group-wrapper
      = f.fields_for :fixed_fees do |fixed_fee_fields|
        - @fixed_fee_count += 1
        = render 'external_users/claims/fixed_fees/fixed_fee_fields', f: fixed_fee_fields

    = link_to_add_association t('.add_fixed_fee'), f, :fixed_fees, partial: 'external_users/claims/fixed_fees/fixed_fee_fields', data: {'association-insertion-method' => 'append', 'association-insertion-traversal' => 'prev', 'association-insertion-node' => 'div'}, class: 'button-gray-3 left'
