- if @claim.allows_fixed_fees?

  #fixed-fees
    %h2.bold-medium
      = t('.fixed_fees')
    .form-hint.xsmall
      = t('.prompt_text_html')

    = f.fields_for :fixed_fee do |ff|
      %table
        %thead
          %tr
            %th
              = t('.fee_type')
            %th
              = t('.total')

        %tbody.fixed-fee-group
          %tr.nested-fields
            %td
              %a{name: "fee_type"}
              = "<Fee type here>"
              = ff.hidden_field :fee_type_id, value: 36
              = validation_error_message(@error_presenter, :fee_type)

            %td
              %div.pound-wrapper
                %a{name: "amount"}
                = ff.label :amount, 'Â£', class: 'pound-sign bold-xsmall'
                = ff.text_field :amount, value: number_with_precision(ff.object.amount, precision: 2), class: 'rate', size: 10, maxlength: 8
              = validation_error_message(@error_presenter, :amount)

