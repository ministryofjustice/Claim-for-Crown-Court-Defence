#hardship-fee
  = f.fields_for :hardship_fee do |hf|
    .hardship-fee-group
      .form-group
        %fieldset
          %legend.visuallyhidden
            = t('.hardship_fee')

      = hf.adp_text_field :quantity,
        label: t('.quantity'),
        hint_text: t('.quantity_hint'),
        input_type: 'number',
        input_classes:'quantity fee-quantity form-control-1-4',
        value: number_with_precision(hf.object.quantity, precision: 0),
        errors: @error_presenter,
        error_key:'hardship_fee.quantity'

      .form-group.nested-fields.js-block.fx-do-init{data:{"type": "hardshipFees", autovat: @claim.apply_vat? ? "true" : "false", "block-type": "FeeBlock"}}
        = hf.adp_text_field :amount,
                              label: t('.amount'),
                              input_classes: 'form-control-1-4 form-input-denote__input total',
                              input_type: 'currency',
                              errors: @error_presenter,
                              value: number_with_precision(hf.object.amount, precision: 2),
                              id: 'hardship_fee_attributes_amount'
