= render partial: 'layouts/header', locals: { page_heading: t('.heading') }

- present(@claim) do |claim|

  .claim-summary-sidebar
    .claim-summary-hgroup.js-stick-at-top-when-scrolling
      %h2
        Summary total
      %h3
        = 'Fees total '
        %span.numeric
          - if @claim.fees_total == 0
            = "No fees for this claim"
          - else
            = claim.fees_total
      %h3
        = 'Expenses total'
        %span.numeric
          - if @claim.expenses.empty?
            = "No expenses for this claim"
          - else
            = claim.expenses_total
      %h3
        VAT total
        %span.numeric
          = claim.vat_amount
      %h3.total
        = "Total "
        %span.numeric
          = claim.total_inc_vat

      = link_to 'Continue', new_external_users_claim_certification_path(@claim), {class: 'button', role: 'button'}

  .claim-summary-content

    %p.form-hint
      Check all the information below is correct before submitting your claim at the bottom of the page.

    %h2
      Claim and case type
    = render partial: 'external_users/claims/case_details/summary', locals: { claim: claim }

    %h2
      Defendants
    = render partial: 'external_users/claims/defendants/summary', locals: { claim: claim }

    %h2
      = t('common.fees')
    = render partial: 'summary_fees', locals: { claim: claim }

    %h2
      = t('common.expenses')
    = render partial: 'external_users/claims/expenses/summary', locals: { claim: claim }

    %h2
      Supporting evidence documents
    = render partial: 'external_users/claims/supporting_documents/summary', locals: { claim: claim }

    %h2
      Supporting evidence checklist
    = render partial: 'external_users/claims/supporting_evidence_checklist/summary', locals: { claim: claim }

    %h2
      = t('external_users.claims.additional_information.fields.additional_information')
    = render partial: 'external_users/claims/additional_information/summary', locals: { claim: claim}
