.form-group
  .form-row
    .form-col.form-col-one-half.has-select{class: error_class?(@error_presenter, :supplier_number)}
      = f.anchored_label(t('.lgfs_supplier_number'), 'supplier_number', { label_attributes: {class: 'form-label'} })
      %div.form-hint
        =supplier_number_hint
      = f.collection_select :supplier_number, current_user.persona.provider.lgfs_supplier_numbers, :supplier_number, :supplier_number, {prompt: true}, {class: 'form-control'}
      = validation_error_message(@error_presenter, :supplier_number)
