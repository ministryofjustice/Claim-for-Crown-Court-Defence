.form-section
  %h3.heading-medium
    = t('external_users.claims.warrant_fee.summary.header')
    - if local_assigns[:editable]
      = link_to t('.change'), edit_polymorphic_path(claim, step: :interim_fees, referrer: :summary), class: 'link-change', 'aria-label': t('.change_link_label')

  - if claim.agfs?
    = render partial: 'external_users/claims/advocate_category_summary', locals: { claim: claim }

  - if claim.warrant_fee.nil?
    %p
      There is no warrant fee for this claim
  - else
    - warrant_fee = present(claim.warrant_fee)
    %table{ class: 'summary' }
      %caption
        %span.table-caption.visuallyhidden
          = t('common.warrant_fees')
          = t('.caption')
      %tbody
        %tr
          %th{ scope: 'row', class: 'bold' }
            = t('shared.summary.fee_type')
          %td
            = warrant_fee.fee_type.description
        %tr
          %th{ scope: 'row', class: 'bold' }
            = t('shared.summary.warrant_fee.date_issued')
          %td
            = warrant_fee.warrant_issued_date

        - if warrant_fee.warrant_executed?
          %tr
            %th{ scope: 'row', class: 'bold' }
              = t('shared.summary.warrant_fee.date_executed')
            %td
              = warrant_fee.warrant_executed_date
