= render partial: 'layouts/header', locals: {page_heading: 'Help us improve this service'}

%p.medium.questions
  Please tell us about your experience of using this service today.
  %br
  Your answers to the following questions will help us improve this service.

= form_for @feedback, url: feedback_index_path, html: { novalidate: 'novalidate', class: 'normal'} do |f|
  = hidden_field_tag :type, params[:type]

  - if @feedback.errors.any?
    .validation-summary
      %h3.heading-small= "The form you submitted has #{pluralize(@feedback.errors.count, 'error')}"
      %ul
        - @feedback.errors.full_messages.each do |msg|
          %li= msg

  .grid-row-with-margin
    .column-half
      .bold-normal
        = f.label :event, "What you were doing"
      = f.text_field :event, style: "width:100%;"
    .column-half
      &nbsp
  .grid-row-with-margin
    .column-half
      .bold-normal
        = f.label :outcome, "What went wrong"
      = f.text_field :outcome, style: "width:100%"
    .column-half
      &nbsp

  .button-holder
    = f.submit 'Send', class: 'button button-primary', id: 'submit-button'
