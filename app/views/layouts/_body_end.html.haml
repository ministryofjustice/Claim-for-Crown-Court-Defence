= javascript_include_tag Rails.env.test? ? '/packs-test/js/application.bundle.js' : '/packs/js/application.bundle.js'

= javascript_pack_tag "application-test" if Rails.env.test?

- if GoogleAnalytics::DataTracking.analytics?
  :javascript
    ga(function(tracker) {
      var clientId = tracker.get('clientId');
      $('.ga-client-id').val(clientId);
    });

= javascript_pack_tag 'govuk-frontend', defer: true
