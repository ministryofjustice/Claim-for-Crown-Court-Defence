- @disable_logo_link  = true
- content_for :head do
  %meta{:name =>"format-detection", :content => "telephone=no"}/
  = stylesheet_link_tag "advocates/application", media: "all"

- content_for :body_classes do
  = "controller-" + controller.controller_name

- content_for :body_end do
  - unless GA_TRACKER_ID.empty?
    %script
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', '#{GA_TRACKER_ID}', 'auto');
      ga('set', 'anonymizeIp', true);
      ga('send', 'pageview');
      = ga_outlet

  = javascript_include_tag "application"

- content_for :content do
  = csrf_meta_tags

  .outer-block
    #primary-nav-bar
      - if user_signed_in?
        = render partial: 'layouts/primary_navigation'
    .phase-banner
      %p
        %strong.phase-tag= config_item(:phase)
        %span
          This is a new service â€“ your
          = link_to "feedback", new_feedback_path
          will help us to improve it.
          You can
          = link_to "report a fault here.", new_bug_report_path
    .container
      = render partial: 'layouts/flashes' unless flash.empty?
      %main.main-content
        = yield

- content_for :footer_support_links do
  = render partial: 'layouts/footer'

= render template: 'layouts/moj_internal_template'
