- content_for :stylesheets do
  = stylesheet_link_tag "application", media: "all"

- content_for :javascripts do
  = javascript_include_tag "application"

= content_for :content_override do
  = csrf_meta_tags

#wrapper.group
  %section#content{role: 'main'}
    %header.page-header.group.tribunal-header
      #fixed-header
        - if user_signed_in?
          = render 'layouts/user'
    .container
      = render partial: 'layouts/flashes' unless flash.empty?
      = yield
