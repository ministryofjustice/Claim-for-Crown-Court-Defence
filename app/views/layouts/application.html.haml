- @disable_logo_link  = true
- content_for :head do
  %meta{:name =>"format-detection", :content => "telephone=no"}/
  = stylesheet_link_tag "application", media: "all"

- content_for :body_end do
  %script
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', '#{GATracking.ga_tracker_id}', {'siteSpeedSampleRate': 100});
    ga('send', 'pageview');

  = javascript_include_tag "application"

= content_for :content do
  = csrf_meta_tags
  .outer-block
    #primary-nav-bar
      - if user_signed_in?
        = render partial: 'layouts/primary_navigation'
    .phase-banner
      %p
        %strong.phase-tag= config_item(:phase)
        %span
          This is a new service â€“ your
          %a{href: "#"} feedback
          will help us to improve it.
    .container
      = render partial: 'layouts/flashes' unless flash.empty?
      %main.main-content
        = yield

- content_for :footer_support_links do
  = render partial: 'layouts/footer'

= render template: 'layouts/moj_internal_template'
