!!! 5
%html(lang="en")
  
  = content_for :additional_css do
    = stylesheet_link_tag "case_workers/application", :media => "all"
  = render 'layouts/header'
  %body
    .navbar.navbar-default.navbar-static-top
      .container-fluid
        %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand(href="#") 
          = "#{Rails.application.config.app_title} - Case Worker"
          - if user_signed_in?
            = render 'layouts/user'
    %aside.aside.col-md-3
      .aside-inner
        .sidebar-nav.well
          %h3 Menu
          %ul.nav.nav-list
            %li.selected 
              Dashboard
              %ul
                %li= link_to "Link 1", "/path1"
                %li= link_to "Link 2", "/path2"
            %li= link_to "Link 1", "/path1"
            %li= link_to "Link 2", "/path2"
            %li= link_to "Link 3", "/path3"
    %section.section.col-md-9
      .container-fluid
        .row
          = render partial: 'layouts/flashes' unless flash.empty?
          = yield
        = render 'layouts/footer'
