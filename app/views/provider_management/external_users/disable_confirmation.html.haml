= content_for :page_title, flush: true do
  = t('.page_title', external_user: @external_user.name)

.govuk-grid-row
  .govuk-grid-column-two-thirds
    %h1.govuk-heading-xl
      = t('.page_title', external_user: @external_user.name)

    %h2.govuk-heading-m
      = t('.disable_message', external_user: @external_user.name)

    = form_with url: update_available_provider_management_provider_external_user_path(@provider, @external_user), method: :patch, builder: GdsAdpFormBuilder do |f|
      = f.hidden_field :available, value: false
      = f.govuk_submit t('.disable_user'), class: 'govuk-button--warning'
      = govuk_link_to(t('.cancel_button'), provider_management_provider_external_user_path(@provider, @external_user))
