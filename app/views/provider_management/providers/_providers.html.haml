- if providers.none?
  %p
    = t('.no_provider')

- else
  %table{ summary: t('.table_summary') }
    %caption.heading-medium.visually-hidden
      = t('.caption')

    %thead
      %th{ scope: 'col' }
        = t('.provider_name')
      %th{ scope: 'col' }
        = t('.provider_type')
      %th{ scope: 'col' }
        = t('.fee_schemes')
      %th{ scope: 'col' }
        = t('.vat_registered')
      %th{ scope: 'col' }
        = t('.users')

    %tbody
      - providers.each do |provider|
        %tr{ id: dom_id(provider) }
          %td
            = link_to provider.name, provider_management_provider_path(provider)
          %td
            = provider.provider_type.humanize
          %td
            = provider.roles.map(&:upcase) * ', '
          %td
            = provider.vat_registered == true ? t('global_yes') : t('global_no')
          %td
            = link_to t('.manage_user'), provider_management_provider_external_users_path(provider)
