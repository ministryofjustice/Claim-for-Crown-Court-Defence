= content_for :page_title, flush: true do
  = t('.page_title')

= render partial: 'layouts/header', locals: { page_heading: t('.page_heading') }

.govuk-grid-row
  .govuk-grid-column-full
    .govuk-button-group
      - if can? :new, Provider
        = govuk_button_link_to(t('.add_a_provider'), new_provider_management_provider_path)
      = govuk_button_link_to(t('.find_provider_by_email'), provider_management_external_users_find_path, secondary: true)

= render partial: 'providers', locals: { providers: @providers }
