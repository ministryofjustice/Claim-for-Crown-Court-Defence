.grid-row
  %h3.heading-medium
    = t('.certification_box_title')
  %table.summary
    %caption
      %span.table-caption.visuallyhidden
        = t('.certification_caption')
    %tbody
      %tr
        %th{scope: "col"}
          = t('.instructed_heading')
        %td
          = claim.external_user.name

      - if @claim.agfs?
        %tr
          %th{scope: "col"}
            = t('.certification_reason')
          %td
            = claim.certification.certification_type.name rescue ''
