%section
  - if claim.case_workers.any? && CaseWorker === current_user.persona && current_user.persona.admin?
    .bold-xsmall
      = t ('.assignee')
    .xsmall
      = claim.case_worker_names

  .basic-info-row
    .column-quarter
      .bold-xsmall
        = t('common.advocate')
      .xsmall
        = claim.advocate.name
    .column-quarter
      .bold-xsmall
        = t('.advocate_category')
      .xsmall
        = claim.advocate_category
    .column-quarter
      .bold-xsmall
        = t('.adv_acc_no')
      .xsmall
        = claim.advocate.supplier_number
    .column-quarter
      &nbsp;

  .basic-info-row
    .column-half
      .bold-xsmall
        = t('common.crown_court')
      .xsmall
        = claim.court.name if claim.court
    .column-half
      &nbsp;

  .basic-info-row
    .column-quarter
      .bold-xsmall
        =t('.case_num')
      .xsmall
        = claim.case_number
    .column-quarter
      .bold-xsmall
        = t('.case_type')
      .xsmall
        = claim.case_type.try(:name)

    .column-quarter
      .bold-xsmall
        = t('.offence')
      .xsmall
        = claim.offence.description if claim.offence
    .column-quarter
      .bold-xsmall
        = t('.offence_class')
      .xsmall
        = claim.offence.offence_class if claim.offence

  - if claim.case_type && claim.case_type.requires_cracked_dates
    .basic-info-row
      .column-quarter
        .bold-xsmall
          = t('advocates.claims.cracked_trial_fields.trial_fixed_notice_at')
        .xsmall
          = claim.trial_fixed_notice_at.strftime('%d/%m/%Y')  rescue ''
      .column-quarter
        .bold-xsmall
          = t('advocates.claims.cracked_trial_fields.trial_fixed_at')
        .xsmall
          = claim.trial_fixed_at.strftime('%d/%m/%Y') rescue ''
      .column-quarter
        .bold-xsmall
          = t('advocates.claims.cracked_trial_fields.trial_cracked_at')
        .xsmall
          =  claim.trial_cracked_at.strftime('%d/%m/%Y') rescue ''
      .column-quarter
        .bold-xsmall
          = t('advocates.claims.cracked_trial_fields.trial_cracked_at_third')
        .xsmall
          = claim.trial_cracked_at_third.humanize

  - if claim.case_type && claim.case_type.requires_trial_dates
    .basic-info-row
      .column-quarter
        .bold-xsmall
          = t('advocates.claims.trial_fields.first_day_of_trial')
        .xsmall
          = claim.first_day_of_trial.strftime('%d/%m/%Y') rescue ''
      .column-quarter
        .bold-xsmall
          = t('advocates.claims.trial_fields.estimated_length')
        .xsmall
          = claim.estimated_trial_length
      .column-quarter
        .bold-xsmall
          = t('advocates.claims.trial_fields.actual_length')
        .xsmall
          = claim.actual_trial_length
      .column-quarter
        .bold-xsmall
          = t('advocates.claims.trial_fields.trial_concluded_at')
        .xsmall
          = claim.trial_concluded_at.strftime('%d/%m/%Y') rescue ''

  - if claim.defendants.any?
    = render partial: 'shared/claim_defendants', locals: {defendants: claim.defendants }
  - else
    = "No defendant details have been supplied for this claim." 
