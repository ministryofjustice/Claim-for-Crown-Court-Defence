- if claim.opened_for_redetermination?
  .govuk-grid-row
    = govuk_warning_text(text: "Opened for redetermination on #{@claim.claim_state_transitions.where(to: 'redetermination').first.created_at} (see messages for further details).")

- if claim.written_reasons_outstanding?
  .govuk-grid-row
    = govuk_warning_text(text: t('case_workers.admin.allocations.filter_tasks.awaiting_written_reasons'))

- if current_user.persona.is_a?(CaseWorker) && claim.valid_transitions_for_detail_form
  = render partial: 'shared/determinations_form', locals: { claim: claim }
- else
  = render partial: 'shared/determinations_table', locals: { claim: claim }
