.grid-row.panel-messages
  .column-one-half
    %h3.heading-medium
      = t('.header')

= render partial: 'shared/claim_history', locals: { claim: claim }

- if claim.opened_for_redetermination?
  .grid-row
    .notice
      %i.icon.icon-important
        %span.visuallyhidden
          Warning
      %strong.bold-small
        Opened for redetermination on #{@claim.claim_state_transitions.where(to: 'redetermination').first.created_at} (see messages for further details).

- if claim.written_reasons_outstanding?
  .grid-row
    .notice
      %i.icon.icon-important
        %span.visuallyhidden
          Warning
      %strong.bold-small
        Awaiting written reasons.

- if current_user.persona.is_a?(CaseWorker) && claim.valid_transitions_for_detail_form
  = render partial: 'shared/determinations_form', locals: { claim: claim }
- else
  = render partial: 'shared/determinations_table', locals: { claim: claim }

