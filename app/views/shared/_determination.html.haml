.govuk-grid-row.history
  .govuk-grid-column-one-third
    = ''
  .govuk-grid-column-two-thirds
    .message-right.event
      .message-container
        .message-body
          = determination.event

          = govuk_table(classes: 'app-table--responsive') do |table|
            = table.with_caption(classes: 'govuk-visually-hidden', text: t('.caption'))

            = table.with_head do |head|
              = head.with_row do |row|
                = row.with_cell(text: t('.item'))
                = row.with_cell(text: t('.amount'), numeric: true)

            = table.with_body do |body|
              - determination.itemise do |item, amount|
                = body.with_row do |row|
                  = row.with_cell(header: true, html_attributes: { scope: 'row', 'data-label': t('.item') }, text: "#{item}")
                  = row.with_cell(html_attributes: { 'data-label': t('.amount') }, text: "#{number_to_currency(amount)}", numeric: true)