.grid-row.dz-preview.dz-file-preview
  .column-three-quarter
    .dz-filename
      %span{ data: { 'dz-name': true } }
      .file-info
        = '('
        %span.dz-size{ data: { 'dz-size': true } }
        = ')'
        %span.dz-progress
          %span.dz-upload{ data: { 'dz-uploadprogress': true } }
  .column-three-quarter
    .dz-remove-link
      %span{ data: { 'dz-remove': true } }
    .dz-error-message
      %span{ data: { 'dz-errormessage': true } }
