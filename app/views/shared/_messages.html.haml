.messages-container
  .messages-list
    = render partial: 'shared/message_list', locals: {claim: @claim }
  .message-status
    = "Status:"
    %span.message-success
    %span.message-error
  - if current_user.persona.is_a?(CaseWorker) || (current_user.persona.is_a?(Advocate) && @message.claim.rejected? == false && @message.claim.draft? == false)
    .js-controls.message-controls{"data-auth-url" => control_message_path}
      = render partial: "shared/message_controls", locals: {message: @message }
