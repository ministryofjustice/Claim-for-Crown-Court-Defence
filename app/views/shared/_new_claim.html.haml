- if claim.certification.present?
  = render partial: 'shared/new_certification', locals: { claim: claim }

= govuk_summary_card(title: t('shared.claim.claim_type')) do |card|
  = govuk_summary_list do |summary_list|

    = render partial: 'shared/new_claim_and_case_type_details', locals: { claim: claim, summary_list: summary_list }

    - if claim.agfs? && claim.case_type.present? && claim.requires_cracked_dates?
      = render partial: 'shared/new_claim_cracked_trial_details', locals: { claim: claim, summary_list: summary_list }

    - if claim.case_type && claim.case_concluded_at
      = render partial: 'shared/new_claim_case_concluded_at_details', locals: { claim: claim, summary_list: summary_list }

    - if claim.lgfs? && claim.interim? && !claim.interim_fee.nil?
      = render partial: 'shared/new_claim_interim_details', locals: { claim: claim, summary_list: summary_list }

    - if claim.transfer?
      = render partial: 'shared/new_claim_transfer_details', locals: { claim: claim, summary_list: summary_list }

    - if claim&.requires_trial_dates?
      = render partial: 'shared/new_claim_trial_details', locals: { claim: claim, summary_list: summary_list }

    - if claim&.requires_retrial_dates?
      = render partial: 'shared/new_claim_retrial_details', locals: { claim: claim, summary_list: summary_list }

    - if claim.main_hearing_date
      = render partial: 'shared/new_main_hearing_date_details', locals: { claim: claim, summary_list: summary_list }

= render partial: 'shared/new_claim_defendants', locals: { claim: claim }

- unless claim.fixed_fee_case?
  = render partial: 'shared/offence_details/new_summary', locals: { claim: claim }
