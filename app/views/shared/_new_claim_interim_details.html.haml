- fee = present(claim.interim_fee)

= govuk_summary_list_row do
  = govuk_summary_list_key { t('shared.summary.fee_type') }
  = govuk_summary_list_value(class: 'govuk-!-width-one-quarter') { fee.fee_type.description }

- if fee.is_interim_warrant?
  = govuk_summary_list_row do
    = govuk_summary_list_key { t('shared.summary.warrant_fee.date_issued') }
    = govuk_summary_list_value(class: 'govuk-!-width-one-quarter') { fee.warrant_issued_date }

- if fee.warrant_executed_date.present?
  = govuk_summary_list_row do
    = govuk_summary_list_key { t('shared.summary.warrant_fee.date_executed') }
    = govuk_summary_list_value(class: 'govuk-!-width-one-quarter') { fee.warrant_executed_date }
- else
  - unless fee.is_disbursement?
    = govuk_summary_list_row do
      = govuk_summary_list_key { t('shared.summary.ppe_total') }
      = govuk_summary_list_value(class: 'govuk-!-width-one-quarter') { fee.quantity }

  - if fee.is_effective_pcmh?
    = govuk_summary_list_row do
      = govuk_summary_list_key { t('shared.summary.effective_pcmh_date') }
      = govuk_summary_list_value(class: 'govuk-!-width-one-quarter') { fee.effective_pcmh_date }

  - if fee.is_trial_start?
    = govuk_summary_list_row do
      = govuk_summary_list_key { t('shared.summary.trial_start') }
      = govuk_summary_list_value(class: 'govuk-!-width-one-quarter') { fee.first_day_of_trial }
    = govuk_summary_list_row do
      = govuk_summary_list_key { t('shared.summary.estimated_trial_length') }
      = govuk_summary_list_value(class: 'govuk-!-width-one-quarter') { fee.estimated_trial_length }

  - if fee.is_retrial_start?
    = govuk_summary_list_row do
      = govuk_summary_list_key { t('shared.summary.retrial_start') }
      = govuk_summary_list_value(class: 'govuk-!-width-one-quarter') { fee.retrial_started_at }
    = govuk_summary_list_row do
      = govuk_summary_list_key { t('shared.summary.estimated_retrial_length') }
      = govuk_summary_list_value(class: 'govuk-!-width-one-quarter') { fee.retrial_estimated_length }

  - if fee.is_retrial_new_solicitor?
    = govuk_summary_list_row do
      = govuk_summary_list_key { t('shared.summary.legal_aid_transfer_date') }
      = govuk_summary_list_value(class: 'govuk-!-width-one-quarter') { fee.legal_aid_transfer_date }
    = govuk_summary_list_row do
      = govuk_summary_list_key { t('shared.summary.trial_concluded_at') }
      = govuk_summary_list_value(class: 'govuk-!-width-one-quarter') { fee.trial_concluded_at }
