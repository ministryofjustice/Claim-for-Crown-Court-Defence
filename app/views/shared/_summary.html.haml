- present(@claim) do |claim|
  %section#summary
    %h3.indent-sides
      = t('common.fees')
    - if @claim.fees_total == 0
      %p
        There are no fees for this claim
    - else
      %table.indent-sides
        %caption.visually-hidden
          = t('common.fees')
        %colgroup
          %col
          %col
          %col
          %col
          %col
        %thead
          %tr
            %th{ scope: 'col'}
              = t('.fee_category')
            %th{ scope: 'col'}
              = t('.fee_type')
            %th.numeric{ scope: 'col'}
              = t('.quantity')
            %th.numeric{ scope: 'col'}
              = t('.rate')
            %th.numeric{ scope: 'col'}
              = t('.amount')
        %tbody
          - present_collection(claim.fees.select(&:present?)).each do |fee|
            %tr
              %td
                = fee.fee_type.fee_category_name
                - if fee.dates_attended.any?
                  %br
                  = t('.dates_attended')
                  = fee.dates_attended_delimited_string
              %td
                = fee.fee_type.description
              %td.numeric
                = fee.quantity
              %td.numeric
                = fee.rate
              %td.numeric
                = fee.amount
      .totals.indent-sides
        = t('.fees_total')
        = claim.fees_total

    %h3.indent-sides
      = t('common.expenses')
    - if claim.expenses.empty?
      %p
        There are no expenses for this claim
    - else
      %table.indent-sides
        %caption.visually-hidden
          = t('common.expenses')
        %colgroup
          %col
          %col
          %col
          %col
          %col
          %col
          %col
        %thead
          %tr
            %th{scope: 'col'}
              = t('.date')
            %th{scope: 'col'}
              = t('.expense_type')
            %th.numeric{scope: 'col'}
              = t('.distance')
            %th.numeric{scope: 'col'}
              = t('.quantity_hours')
            %th{scope: 'col'}
              = t('.location')
            %th.numeric{scope: 'col'}
              = t('.amount')
        %tbody
          - present_collection(claim.expenses).each do |expense|
            %tr.no-border
              %td
                = expense.date
              %td
                = expense.name
              %td.numeric
                = expense.distance
              %td.numeric
                = expense.quantity
              %td
                = expense.location
              %td.numeric
                = expense.amount
            %tr
              %td{colspan: "6"} 
                .bold-normal
                  = t('.reason')
                = expense.expense_reason.reason

      .totals.indent-sides
        = t('.expenses_total')
        = claim.expenses_total

      %h3.indent-sides
        = "Disbursements"
    - if claim.disbursements.empty?
      %p
        There are no disbursements for this claim
    - else
      %table.indent-sides
        %caption.visually-hidden
          = "Disbursements"
        %colgroup
          %col
          %col
          %col
          %col
        %thead
          %tr
            %th{scope: 'col'}
              = "Disbursement type"
            %th.numeric{scope: 'col'}
              = "Net amount"
            %th.numeric{scope: 'col'}
              = "VAT amount"
            %th.numeric{scope: 'col'}
              = "Total amount"
        %tbody
          - present_collection(claim.disbursements).each do |disbursement|
            %tr
              %td
                = disbursement.disbursement_type.name
              %td.numeric
                = disbursement.net_amount
              %td.numeric
                = disbursement.vat_amount
              %td.numeric
                = disbursement.total


      .totals.indent-sides
        = 'Disbursements total'
        = claim.disbursements_total


    .totals.indent-sides
      = 'Claim total (net):'
      = claim.total

    .totals.indent-sides
      = 'VAT:'
      = claim.vat_amount

    .totals.indent-sides
      = 'Claim total (inc. VAT)'
      = claim.total_inc_vat



    - unless @claim.additional_information.blank?
      %h3.indent-sides
        = t('.additional_information')
      %p.indent-sides
        = @claim.additional_information
