- present(@claim) do |claim|
  %section#summary
    %h3.indent-sides
      = t('common.fees')
    - if @claim.fees_total == 0
      %p.indent-sides
        There are no fees for this claim
    - else
      / table does noe require summary
      %table.indent-sides
        %caption.visually-hidden
          = t('.fees.caption')
        %thead
          %tr
            %th{ scope: 'col' }
              = t('.fee_category')
            %th{ scope: 'col' }
              = t('.fee_type')
            - unless claim.interim?
              %th.numeric{ scope: 'col' }
                = t('.quantity')
            - if claim.agfs?
              %th.numeric{ scope: 'col' }
                = t('.rate')
            %th.numeric{ scope: 'col' }
              = t('.amount')
        %tbody
          - present_collection(claim.fees.select(&:present?)).each do |fee|
            %tr
              %td
                = fee.fee_type.fee_category_name
                - if fee.dates_attended.any?
                  %br
                  = t('.dates_attended')
                  = fee.dates_attended_delimited_string
                - if fee.date?
                  %br
                  = t('.date')
                  = fee.date
              %td{scope: 'row'}
                = fee.fee_type.description
                - if fee.sub_type.present?
                  %p
                    = "#{t('.fee_subtype')}: #{fee.sub_type.description}"

              - unless claim.interim?
                %td.numeric
                  = fee.quantity
              - if claim.agfs?
                %td.numeric
                  = fee.rate
              %td.numeric
                = fee.amount
      .totals.indent-sides
        = t('.fees_total')
        = claim.fees_total

    - if claim.can_have_expenses?
      %h3.indent-sides
        = t('common.expenses')
      - if claim.expenses.empty?
        %p.indent-sides
          There are no expenses for this claim
      - else
        / table does noe require summary
        %table.indent-sides
          %caption.visually-hidden
            = t('.expenses.caption')
          %thead
            %tr
              %th{scope: 'col'}
                = t('.date')
              %th{scope: 'col'}
                = t('.expense_type')
              %th.numeric{scope: 'col'}
                = t('.distance')
              - if claim.agfs?
                %th.numeric{scope: 'col'}
                  = t('.quantity_hours')
              %th{scope: 'col'}
                = t('.location')
              %th.numeric{scope: 'col'}
                = t('.amount')
              - if claim.lgfs?
                %th.numeric{scope: 'col'}
                  = t('.vat_amount')
                %th.numeric{scope: 'col'}
                  Total amount
          %tbody
            - present_collection(claim.expenses).each do |expense|
              %tr.no-border
                %td
                  = expense.date
                %td{scope:'row'}
                  = expense.name
                %td.numeric
                  = expense.distance
                - if claim.agfs?
                  %td.numeric
                    = expense.hours
                %td
                  = expense.location
                %td.numeric
                  = expense.amount
                - if claim.lgfs?
                  %td.numeric
                    = expense.vat_amount
                  %td.numeric
                    = expense.total
              %tr
                %td{colspan: "6"}
                  .bold-normal
                    = t('.reason')
                  = expense.reason
        .totals.indent-sides
          = t('.expenses_total')
          = claim.expenses_total

    - if claim.can_have_disbursements?
      %h3.indent-sides
        = t('common.disbursements')
      - if claim.disbursements.empty?
        %p.indent-sides
          There are no disbursements for this claim
      - else
        / table does noe require summary
        %table.indent-sides
          %caption.visually-hidden
            = t('.disbursements.caption')
          %thead
            %tr
              %th{scope: 'col'}
                = "Disbursement type"
              %th.numeric{scope: 'col'}
                = "Net amount"
              %th.numeric{scope: 'col'}
                = "VAT amount"
              %th.numeric{scope: 'col'}
                = "Total amount"
          %tbody
            - present_collection(claim.disbursements).each do |disbursement|
              %tr
                %td{scope:'row'}
                  = disbursement.name
                %td.numeric
                  = disbursement.net_amount
                %td.numeric
                  = disbursement.vat_amount
                %td.numeric
                  = disbursement.total
        .totals.indent-sides
          = 'Disbursements total'
          = claim.disbursements_total

    .totals.indent-sides
      = 'Claim total (net):'
      = claim.total

    .totals.indent-sides
      = 'VAT:'
      = claim.vat_amount

    .totals.indent-sides
      = 'Claim total (inc. VAT)'
      = claim.total_inc_vat

    - unless @claim.additional_information.blank?
      %h3.indent-sides
        = t('.additional_information')
      %p.indent-sides
        = @claim.additional_information
