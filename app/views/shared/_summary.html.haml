%section#summary
  %h1
    Fees
  %table
    %thead
      %th
        Fee Category
      %th
        Fee Type
      %th
        Quantity
      %th
        Rate
      %th
        Amount
      - if @claim.apply_vat?
        %th
          VAT (at 20%)
      %th
    %tbody
      - @claim.fees.each do |fee|
        %tr
          %td
            = fee.fee_type.fee_category.name
          %td
            = fee.fee_type.description
          %td
            = fee.quantity
          %td
            = '%.2f' % fee.rate
          %td
            = number_to_currency(fee.amount)
          - if @claim.apply_vat?
            %th
              = number_to_currency(fee.amount * 0.2)
  %p
    Fees total:
    = number_to_currency(@claim.fees_total)
    (excluding VAT)

  %h1
    Expenses
  %table
    %thead
      %th
        Expense type
      %th
        Location
      %th
        Quantity
      %th
        Rate
      %th
        Hours
      %th
        Amount
      - if @claim.apply_vat?
        %th
          VAT (at 20%)
    %tbody
      - @claim.expenses.each do |expense|
        %tr
          %td
            = expense.expense_type.name
          %td
            = expense.location
          %td
            = expense.quantity
          %td
            = '%.2f' % expense.rate
          %td
            = '%.2f' % expense.hours
          %td
            = number_to_currency(expense.amount)
          - if @claim.apply_vat?
            %th
              = number_to_currency(expense.amount * 0.2)
  %p
    Expenses total:
    = number_to_currency(@claim.expenses_total)
    (excluding VAT)

  %p
    Claim total:
    = number_to_currency(@claim.total)
    (excluding VAT)
