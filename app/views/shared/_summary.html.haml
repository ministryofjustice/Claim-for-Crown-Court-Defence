- present(@claim) do |claim|
  %section#summary
    %h1
      Fees
    %table
      %thead
        %th
          Fee Category
        %th
          Fee Type
        %th
          Quantity
        %th
          Amount
      %tbody
        - claim.fees.select(&:present?).each do |fee_object|
          - present(fee_object) do |fee|
            %tr
              %td
                = fee.fee_type.fee_category.name
                - if fee.dates_attended.any?
                  %br
                  Dates attended:
                  = fee.dates_attended_delimited_string
              %td
                = fee.fee_type.description
              %td
                = fee.quantity
              %td
                = fee.amount
    %p
      Fees total:
      = claim.fees_total

    %h1
      Expenses
    %table
      %thead
        %th
          Expense type
        %th
          Location
        %th
          Quantity/Hours
        %th
          Rate
        %th
          Amount
      %tbody
        - claim.expenses.each do |expense|
          %tr
            %td
              = expense.expense_type.name
            %td
              = expense.location
            %td
              = expense.quantity
            %td
              = '%.2f' % expense.rate
            %td
              = number_to_currency(expense.amount)
    %p
      Expenses total:
      = claim.expenses_total

    %p
      Claim total:
      = claim.total

    - if claim.apply_vat?
      %p
        %strong
          VAT applies to claim
