
- present(@claim) do |claim|
  %section#summary
    %h3.heading-medium
      = t('common.fees')
    - if @claim.fees_total == 0
      %p
        = t('shared.summary.no_values.fees')
    - else
      / table does noe require summary
      %table.figures
        %caption.visually-hidden
          = t('.fees.caption')
        %thead
          %tr
            %th{ scope: 'col' }
              = t('.fee_category')
            %th{ scope: 'col' }
              = t('.fee_type')
            - unless claim.interim?
              %th.numeric{ scope: 'col' }
                = t('.quantity')
            %th.numeric{ scope: 'col' }
              = t('.amount')
        %tbody
          - present_collection(claim.fees.select(&:present?)).each do |fee|
            %tr
              %td
                = fee.fee_type&.fee_category_name || 'n/a'
                - if fee.dates_attended.any?
                  %br
                  = t('.dates_attended')
                  = fee.dates_attended_delimited_string
                - if fee.date?
                  %br
                  = t('.date')
                  = fee.date
              %td{scope: 'row'}
                = fee.fee_type&.description || 'n/a'
                - if fee.sub_type.present?
                  %p
                    = "#{t('.fee_subtype')}: #{fee.sub_type.description}"

              - unless claim.interim?
                %td.numeric
                  = fee.quantity
              %td.numeric
                = fee.amount

      .totals
        = t('.fees_total')
        = claim.fees_total

    - if claim.can_have_expenses?
      - if claim.expenses.empty?
        %p
          = t('shared.summary.no_values.expenses')
      - else
        / table does noe require summary
        - if claim.expenses.with_vat.any?
          %h3.heading-medium
            = "Expenses with VAT LGFS"
          %table.figures
            %caption.visually-hidden
              = t('.expenses.caption')
            %thead
              %tr
                %th{scope: 'col'}
                  = t('.date')
                %th{scope: 'col'}
                  = t('.expense_type')
                %th{scope: 'col'}
                  = t('.location')
                %th.numeric{scope: 'col'}
                  = "Net amount"
                %th.numeric{scope: 'col'}
                  = "VAT"
                %th.numeric{scope: 'col'}
                  = "Gross amount"
            %tbody
              - present_collection(claim.expenses.with_vat).each do |expense|
                %tr.no-border
                  %td
                    = expense.pretty_date
                  %td{scope:'row'}
                    %span.bold-normal
                      = expense.name
                  %td
                    %span.bold-normal
                      = "#{expense.reason}"
                    %br/
                    .details
                      = expense.location
                      %br/
                      - if expense.distance?
                        = "Dist: #{expense.distance} miles"
                        %br/
                        = "Cost: #{expense.mileage_rate}"
                        %br/
                      - if expense.hours?
                        = "Hours: #{expense.hours}"

                  %td.numeric
                    = expense.amount
                  %td.numeric
                    = expense.vat_amount
                  %td.numeric
                    = expense.gross_amount

            %tfoot
              %tr.totals
                %td{colspan: 3}
                  = "Expenses with VAT total:"
                %td.numeric
                  = claim.expenses_with_vat_net
                %td.numeric
                  = claim.expenses_vat
                %td.numeric
                  = claim.expenses_with_vat_gross

        - if claim.expenses.without_vat.any?
          %h3.heading-medium
            = "Expenses without VAT"
          %table.figures
            %caption.visually-hidden
              = t('.expenses.caption')
            %thead
              %tr
                %th{scope: 'col'}
                  = t('.date')
                %th{scope: 'col'}
                  = t('.expense_type')
                %th{scope: 'col'}
                  = "Details"
                %th.numeric{scope: 'col'}
                  = "Net amount"
                %th.numeric{scope: 'col'}
                  = "Gross amount"
            %tbody
              - present_collection(claim.expenses.without_vat).each do |expense|
                %tr.no-border
                  %td
                    = expense.pretty_date
                  %td{scope:'row'}
                    %span.bold-normal
                      = expense.name
                  %td
                    %span.bold-normal
                      = "#{expense.reason}"
                    %br/
                    .details
                      = expense.location
                      %br/
                      - if expense.distance?
                        = "Dist: #{expense.distance} miles"
                        %br/
                        = "Cost: #{expense.mileage_rate}"
                        %br/
                      - if expense.hours?
                        = "Hours: #{expense.hours}"

                  %td.numeric
                    = expense.amount
                  %td.numeric
                    = expense.gross_amount

            %tfoot
              %tr.totals
                %td{colspan: 3}
                  = "Expenses without VAT total:"
                %td.numeric
                  = claim.expenses_without_vat_net
                %td.numeric
                  = claim.expenses_without_vat_gross


    - if claim.can_have_disbursements?
      %h3.heading-medium
        = t('common.disbursements')
      - if claim.disbursements.empty?
        %p
          = t('shared.summary.no_values.disbursements')
      - else
        / table does noe require summary
        %table.figures
          %caption.visually-hidden
            = t('.disbursements.caption')
          %thead
            %tr
              %th{scope: 'col'}
                = "Disbursement type"
              %th.numeric{scope: 'col'}
                = "Net amount"
              %th.numeric{scope: 'col'}
                = "VAT amount"
              %th.numeric{scope: 'col'}
                = "Total amount"
          %tbody
            - present_collection(claim.disbursements).each do |disbursement|
              %tr
                %td{scope:'row'}
                  = disbursement.name
                %td.numeric
                  = disbursement.net_amount
                %td.numeric
                  = disbursement.vat_amount
                %td.numeric
                  = disbursement.total
        .totals
          = 'Disbursements total'
          = claim.disbursements_total

    .totals
      = 'Claim total (net):'
      = claim.total

    .totals
      = 'VAT:'
      = claim.vat_amount

    .totals
      = 'Claim total (inc. VAT)'
      = claim.total_inc_vat

    - if claim.additional_information.present?
      %h3.heading-medium
        = t('.additional_information')
      %p.indent-sides
        = claim.additional_information
