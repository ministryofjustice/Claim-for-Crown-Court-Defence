%fieldset
  %legend
    = t('.lgfs_supplier_numbers')
  .form-group
    .supplier_number_wrapper
      = f.fields_for :lgfs_supplier_numbers do |snf|
        - @sn_index = snf.index + 1
        = render 'shared/supplier_number_fields', f: snf

    = link_to_add_association t('.add_supplier_number'),
                                f,
                                :lgfs_supplier_numbers, partial: 'shared/supplier_number_fields',
                                data: {'association-insertion-method' => 'append',
                                        'association-insertion-traversal' => 'prev',
                                        'association-insertion-node' => '.supplier_number_wrapper'}