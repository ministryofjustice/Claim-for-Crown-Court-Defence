- claim_fields = %i[external_users claims offence_details fields]

- summary_list.with_row do |row|
  - row.with_key(text:t('offence_class', scope: claim_fields) )
  - row.with_value( text: (claim.offence&.offence_category&.description || t('general.not_provided')))

- summary_list.with_row do |row|
  - row.with_key(text: t('offence_band', scope: claim_fields) )
  - row.with_value(text: (claim.offence&.offence_band&.description || t('general.not_provided') ))

- summary_list.with_row do |row|
  - row.with_key(text: t('offence_category', scope: claim_fields) )
  - row.with_value(text: (claim.offence&.description || t('general.not_provided') ))
