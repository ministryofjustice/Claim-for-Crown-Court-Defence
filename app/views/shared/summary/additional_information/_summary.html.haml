.form-section
  %h3.heading-medium
    = t('.header')
    - if local_assigns[:editable]
      = link_to t('.change'), edit_polymorphic_path(claim, step: :supporting_evidence, anchor: 'additional_info', referrer: :summary), class: 'link-change', 'aria-label': t('.change_link_label')

  - if claim.additional_information.present?
    = simple_format(claim.additional_information)
  - else
    - if claim.draft?
      - if local_assigns.has_key?(:editable) && !local_assigns[:editable]
        = render partial: 'shared/summary/section_status', locals: { claim: claim, section: section, step: :supporting_evidence }
      - else
        = t("shared.summary.no_values.additional_information")
    - else
      = t("shared.summary.no_values.additional_information")
