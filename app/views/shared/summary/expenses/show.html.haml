%tr.no-border
  %td{scope: 'row'}
    %span.bold-normal
      = expense.name
  %td{scope: 'row'}
    %span.bold-normal
      = expense.reason
  %td
    .details
      %ul
        %li
          %span.bold
            = succeed ':' do
              = t('.origin')
          = claim.supplier_name
          = "(#{claim.supplier_postcode})"
          %br/
          %span.bold
            = succeed ':' do
              = t('.destination')
          = expense.location
          = "(#{expense.location_postcode})"
        - if expense.distance?
          %li
            %span.bold
              = succeed ':' do
                = t('.distance')
            = "#{expense.distance} miles"
          - if claim.lgfs?
            %li{ class: ('error' if expense.diff_distances?) }
              %span.bold
                = succeed ':' do
                  = t('.calculated_distance')
              = expense.pretty_calculated_distance
              %br/
              = link_to_map t('.view_map_link'), origin: claim.supplier_postcode, destination: expense.location_postcode, target: '_blank'
          %li
            %span.bold
              = succeed ':' do
                = t('.cost')
            = expense.mileage_rate
        - if expense.hours?
          %li
            %span.bold
              = succeed ':' do
                = t('.hours')
            = expense.hours
  %td
    = expense.pretty_date
  %td.numeric
    = expense.amount
  %td.numeric
    = expense.vat_present? ? expense.vat_amount : ''
  %td.numeric
    = expense.gross_amount
