#chamber-form
  = form_for [:super_admins, @chamber], html: { novalidate: true } do |f|

    - if @chamber.errors.any?
      .validation-summary
        %h2.heading-small= "#{t('.prohibited_save')} #{pluralize(@chamber.errors.count, t('.error'))}"
        %ul
          - @chamber.errors.full_messages.each do |message|
            %li
              = message
        %span.form-hint
          = t('.form_error_hint')
    %fieldset.user-form
      = f.label t('.chamber_name'), class: "form-label"
      = f.text_field :name, class: "form-control"
      = validation_error_message(@chamber, :name)

      = f.label t('.supplier_number'), class: "form-label"
      = f.text_field :supplier_number, class: "form-control"
      = validation_error_message(@chamber, :supplier_number)

      = f.label :vat_registered, t('.vat_registered'), class: "form-label"
      %div.form-group.inline
        =f.collection_radio_buttons(:vat_registered, [true, false], :to_s, :to_s) do |b|
          - b.label(class: 'block-label') { b.radio_button + (b.value.to_s == 'true' ? 'Yes' : 'No') }

    %p
      = f.submit 'Save', class: "button"
