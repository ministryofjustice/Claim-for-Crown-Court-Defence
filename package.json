{
  "name": "claim_for_crown_court_defense",
  "description": "Claim for Crown Court Defence",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ministryofjustice/Claim-for-Crown-Court-Defence.git"
  },
  "author": "LAA Developers",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ministryofjustice/Claim-for-Crown-Court-Defence/issues"
  },
  "homepage": "https://github.com/ministryofjustice/Claim-for-Crown-Court-Defence#readme",
  "scripts": {
    "validate:js": "standard",
    "validate:scss": "stylelint **/*.scss",
    "test:jasmine-headless": "npx jasmine-browser-runner runSpecs",
    "test:jasmine": "npx jasmine-browser-runner",
    "build": "yarn build:css && yarn build:js",
    "build:css": "sass ./app/assets/stylesheets/application.scss:./app/assets/builds/application.css --style=compressed --load-path=node_modules",
    "build:js": "npx esbuild app/javascript/application.js --bundle --minify --outdir=app/assets/builds --target=es2017 --inject:app/javascript/shims/jquery-global.js --inject:app/javascript/shims/stickyfill-global.js --inject:app/javascript/shims/accessible-autocomplete-global.js"
  },
  "dependencies": {
    "@ministryofjustice/frontend": "^3.7.2",
    "@rails/ujs": "^7.1.3-4",
    "accessible-autocomplete": "^3.0.1",
    "chart.js": "^4.5.0",
    "chartkick": "^5.0.1",
    "datatables.net-buttons-dt": "^3.2.4",
    "datatables.net-dt": "^2.3.3",
    "datatables.net-fixedheader-dt": "^4.0.3",
    "datatables.net-select-dt": "^3.1.0",
    "govuk-frontend": "^5.9.0",
    "jquery": "^3.7.1",
    "jquery-accessible-accordion-aria": "^2.6.1",
    "jquery-highlight": "^3.5.0",
    "jquery-throttle-debounce": "^1.0.0",
    "jquery-ujs": "^1.2.3",
    "jquery-xpath": "^0.3.1",
    "jquery.iframe-transport": "^1.0.0",
    "jsrender": "^1.0.16",
    "sass": "^1.92.1",
    "stickyfilljs": "^2.1.0"
  },
  "devDependencies": {
    "jasmine-browser-runner": "^3.0.0",
    "jasmine-core": "^5.9.0",
    "postcss": "^8.5.6",
    "standard": "^17.1.2",
    "stylelint": "^15.11.0",
    "stylelint-config-gds": "^1.1.1",
    "stylelint-order": "^6.0.4"
  },
  "standard": {
    "env": [
      "jasmine",
      "jquery"
    ],
    "globals": [
      "GOVUK",
      "moj",
      "Stickyfill"
    ],
    "ignore": [
      "app/javascript/vendor/",
      "spec/javascripts/helpers/"
    ]
  }
}
