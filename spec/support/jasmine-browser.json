{
  "srcDir": ".",
  "srcFiles": [
    "app/assets/builds/*.js"
  ],
  "specDir": "./",
  "specFiles": [
    "app/webpack/javascripts/modules/**/*[sS]pec.?(m)js",
    "spec/javascripts/**/*[sS]pec.?(m)js"
  ],
