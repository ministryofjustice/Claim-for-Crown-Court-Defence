<claim>
  <claim_details>
    <!-- type can be Advocate, Litigator Final, Litigator Interim, Litigator Transfer -->
    <type>Advocate</type>
    <!--provider_key is the key that CCR/CCLF use to identify provider-->
    <provider_key>2161f858-cb16-4c77-9792-28defcbc5688</provider_key>
    <!--We can either send an id that identifies the creator to CCCD, or an id used byCCRR/CCLF -->
    <created_by_uuid>2161f859-cb16-4c77-9792-28defcbc5688</created_by_uuid>
    <!--External_user_uuid identifies the advocate or litigator who is making the claim-->
    <external_user_uuid>2161f859-cb16-4c77-9792-28defcbc5688</external_user_uuid>
    <!--Advocate Category can be QC, Leading Junior, Led Junior, Junior alone,  or we can send a code which identifies this to CCR/CCLF-->
    <advocate_category>QC</advocate_category>
  </claim_details>

  <case_details>
    <!--Case type is a code which identifies the case type to the CCR/CCLF systems -->
